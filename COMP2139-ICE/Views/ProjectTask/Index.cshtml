@* specifies the collection of ProjectTasks *@
@model IEnumerable<ProjectTask>

@{
    ViewData["Title"] = "Tasks List";
    bool searchPerformed = ViewData["SearchPerformed"] as bool? ?? false;
    string searchString = ViewData["SearchString"] as string;
}

<h2>@ViewData["Title"]</h2>

<!-- Button to create a new task -->
<a asp-action="Create" asp-route-projectId="@ViewBag.ProjectId" class=" btn btn-primary my-2">Create New Task</a>

<!-- Button to go back to the list of projects -->
<a asp-controller="Project" asp-action="Index" class="btn btn-secondary my-2">Back to Projects</a>
@if (Model.Any())
{
    <table class="table border">
        <thead>
        <tr>
            <th>Task ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Project ID</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.ProjectTaskId</td>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.ProjectId</td>
                <td>
                    <a asp-action="Details" asp-route-id="@task.ProjectTaskId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@task.ProjectTaskId" class="btn btn-success">Edit</a>
                    <a asp-action="Delete" asp-route-id="@task.ProjectTaskId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    if (searchPerformed)
    {
        <p>No tasks with name "@searchString" were found.</p>
    }
    else
    {
        <p>No tasks available.</p>
    }
}
